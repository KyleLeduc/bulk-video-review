{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "plugins/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@infra/*": [
        "src/infrastructure/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@app/*": [
        "src/application/*"
      ],
      "@app": [
        "src/application/index.ts"
      ],
      "@presentation/*": [
        "src/presentation/*"
      ],
      "@test-utils/*": [
        "src/test-utils/*"
      ]
    }
  }
}
